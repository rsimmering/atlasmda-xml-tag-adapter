<targets>
    <target name="entity.impl.base"
            stereotype="entity"
            template="entity.base.java.vm"
            outputFile="${name}Base.java"
            namespace="org.atlas.test.entity"
            outputPath="${generated.source.root}/org/atlas/test/entity"
            overwrite="true"/>

    <target name="entity.impl"
            stereotype="entity"
            template="entity.java.vm"
            outputFile="${name}.java"
            namespace="org.atlas.test.entity"
            outputPath="${main.source.root}/org/atlas/test/entity"
            overwrite="false"/>

    <target name="enum"
            stereotype="enumeration"
            template="enum.java.vm"
            outputFile="${name}.java"
            namespace="org.atlas.test.entity"
            outputPath="${generated.source.root}/org/atlas/test/entity"
            overwrite="true"/>

    <target name="ejb"
            stereotype="control"
            template="ejb.vm"
            outputFile="${name}EJB.java"
            namespace="org.atlas.test.ejb"
            outputPath="${main.source.root}/org/atlas/test/ejb"
            overwrite="false"/>

</targets>
